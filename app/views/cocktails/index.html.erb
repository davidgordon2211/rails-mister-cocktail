<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'cocktail_banner.jpg' %>);">
  <div class="container">
    <h1>Welcome To Cocktails Creation</h1>
  </div>
</div>
<div class="container">
  <div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path cocktail.photo %>)">
    <%= link_to cocktail_path(cocktail) do %>
        <h1><%= cocktail.name %></h1>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="text-center mt-5">
  <%= link_to "Create a new cocktail", new_cocktail_path, class: 'btn btn-primary btn-lg'  %>
  </div>
  </div>
